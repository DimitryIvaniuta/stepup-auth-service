{
  "info": {
    "name": "Step-Up Auth Service",
    "_postman_id": "abb58750-79c5-45a1-902b-1bf0dd404323",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080"
    },
    {
      "key": "token",
      "value": ""
    },
    {
      "key": "challengeId",
      "value": ""
    },
    {
      "key": "otp",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/public/register",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "public",
            "register"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"demo\",\n  \"password\": \"demo12345\"\n}"
        }
      }
    },
    {
      "name": "Login (sets token)",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "var json = pm.response.json();",
              "pm.collectionVariables.set('token', json.token);",
              "pm.test('Token exists', function(){ pm.expect(json.token).to.be.ok; });"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/public/login",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "public",
            "login"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"demo\",\n  \"password\": \"demo12345\"\n}"
        }
      }
    },
    {
      "name": "Authorize (safe)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          },
          {
            "key": "X-Device-Id",
            "value": "device-abc-1"
          },
          {
            "key": "X-Country",
            "value": "PL"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/transactions/authorize",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "transactions",
            "authorize"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"actionType\": \"TRANSFER\",\n  \"amount\": \"10.00\"\n}"
        }
      }
    },
    {
      "name": "Authorize (risky) (sets challengeId)",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "var json = pm.response.json();",
              "if (json.challengeId) { pm.collectionVariables.set('challengeId', json.challengeId); }",
              "pm.test('Decision returned', function(){ pm.expect(json.decision).to.be.ok; });"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          },
          {
            "key": "X-Device-Id",
            "value": "device-new-999"
          },
          {
            "key": "X-Country",
            "value": "US"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/transactions/authorize",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "transactions",
            "authorize"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"actionType\": \"TRANSFER\",\n  \"amount\": \"5000.00\"\n}"
        }
      }
    },
    {
      "name": "Verify OTP",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/stepup/{{challengeId}}/verify",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "stepup",
            "{{challengeId}}",
            "verify"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"otp\": \"{{otp}}\"\n}"
        }
      }
    }
  ]
}