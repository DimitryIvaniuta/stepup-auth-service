              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/admin/outbox",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "admin",
                "outbox"
              ]
            }
          }
        },
        {
          "name": "Admin - Retry Outbox (set outboxId first)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/admin/outbox/{{outboxId}}/retry",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "admin",
                "outbox",
                "{{outboxId}}",
                "retry"
              ]
            }
          }
        },
        {
          "name": "Admin - Monitoring Events",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/admin/monitoring/events",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "admin",
                "monitoring",
                "events"
              ]
            }
          }
        }
      ]
    }
  ]
}